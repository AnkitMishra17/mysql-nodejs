                                    <li class="list-group-item text-dark"><p>Cost INR</p><h2><%= output[i].Price %></h2></li>
                                    <li class="list-group-item"><button class="btn btn-warning">Add to Cart</button></li>
                                </ul>
                            </div>
                        </div>
               <% } } %> 
            </div>
    </div>
